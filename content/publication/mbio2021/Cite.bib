number = {2},
pages = {392--400},
pmid = {22476265},
title = {{Water-seeking behavior in worm-infected crickets and reversibility of parasitic manipulation}},
url = {http://beheco.oxfordjournals.org/content/22/2/392.short},
volume = {22},
