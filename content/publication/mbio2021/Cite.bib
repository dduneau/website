journal = {Evolutionary Applications},
keywords = {lyme disease bacteria,pathogen detection,seabirds,site-occupancy models,transmission},
month = {apr},
number = {9999},
pages = {391--401},
title = {{Cryptic vector divergence masks vector-specific patterns of infection: an example from the marine cycle of Lyme borreliosis}},
url = {http://dx.doi.org/10.1111/j.1752-4571.2010.00127.x http://doi.wiley.com/10.1111/j.1752-4571.2010.00127.x http://onlinelibrary.wiley.com/doi/10.1111/j.1752-4571.2010.00127.x/full},
