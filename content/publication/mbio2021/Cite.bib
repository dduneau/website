isbn = {1111111111},
issn = {1553-7404},
journal = {PLoS Genetics},
month = {sep},
number = {9},
pages = {e1007686},
title = {{Genetic basis of thermal plasticity variation in {\textless}i{\textgreater}Drosophila melanogaster{\textless}/i{\textgreater} body size}},
url = {https://dx.plos.org/10.1371/journal.pgen.1007686 http://dx.plos.org/10.1371/journal.pgen.1007686},
